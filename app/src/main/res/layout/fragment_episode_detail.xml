<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.fragments.episode.detail.EpisodeDetailFragment">

    <ProgressBar
        android:id="@+id/loader_episode_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/type_episode_detail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        tools:ignore="ContentDescription"
        tools:src="@tools:sample/avatars"/>
    <TextView
        android:id="@+id/text_episode_detail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/purple_500"
        tools:text="@tools:sample/date/day_of_week"/>
    <TextView
        android:id="@+id/text_episode_detail_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        tools:text="@tools:sample/full_names"
        android:textColor="@color/black"/>


</LinearLayout>